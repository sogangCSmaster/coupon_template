        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js")
        script(src="/typeahead.min.js")
        script.
            var datas = !{JSON.stringify(datas)};
            var $input = $("#input");
            $input.typeahead({
                source: datas,
                displayText: function(item) {
                    return item.name + " | " + item.marketSub
                },
                afterSelect: function(item) {
                    this.$element[0].value = item.name
                },
                autoSelect: true,
                items: 5
            });

        script.
            $(document).ready(function(){
                var getUrlParameter = function getUrlParameter(sParam) {
                    var sPageURL = window.location.search.substring(1),
                        sURLVariables = sPageURL.split('&'),
                        sParameterName,
                        i;

                    for (i = 0; i < sURLVariables.length; i++) {
                        sParameterName = sURLVariables[i].split('=');

                        if (sParameterName[0] === sParam) {
                            return sParameterName[1] === undefined ? true : decodeURIComponent(sParameterName[1]);
                        }
                    }
                };
                var coupon = getUrlParameter('coupon');
                if(coupon){
                    $("#coupon").val(coupon);
                }
                $("#coupon").mask('AAAA-BBBB-CCCC',{'translation': {
                    A: {pattern: /[A-Za-z0-9]/},
                    B: {pattern: /[A-Za-z0-9]/},
                    C: {pattern: /[A-Za-z0-9]/}
                }});
            })
        script.
            $("#use").on('click', function(){
                var coupon = $("#coupon").val();
                var location = $("#input").val();
                if(!location){
                    return alert('사용하시는 매장을 선택해주세요.');
                }
                if(!coupon){
                    return alert('쿠폰 번호를 입력해주세요.');
                }
                var confirmed = confirm(location + '점에서 사용하시겠습니까?');
                if(confirmed==false){
                    return;
                }
                var inspector = "nene";
                $.ajax({
                    method: "POST",
                    url: "/",
                    data: {
                        coupon,
                        location,
                        inspector
                    }
                }).done(function(res){
                    alert(res);
                })
                
            })